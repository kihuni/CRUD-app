<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud App</title>
</head>
<body>
  <h1>Quote application</h1>

  <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name">
      <input type="text" placeholder="quote" name="quote">
      <button type="submit">Submit</button>
  </form>

  <ul class="quotes">
    <!-- Loop through quotes -->
    <% for(var i = 0; i < quotes.length; i++) {%>
      <li class="quote">
        <!-- Output name from the iterated quote object -->
        <span><%= quotes[i].name %></span>
        <!-- Output quote from the iterated quote object -->
        <span><%= quotes[i].quote %></span>
      </li>
    <% } %>
  </ul>
  <div>
    <h2>Updating information</h2>

    <button id='update-btn'>click to update</button>
  </div>

  <div>
    <h3>delete quote</h3>
    <button id="delete-btn">click to delete</button>
  </div>
  <script src="/server.js"></script>
</body>
</html>